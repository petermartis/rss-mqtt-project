#!/bin/bash

echo -e "\n=== RSS to MQTT Publisher - Help ==="
echo ""
echo -e "\033[1;36mCommands:\033[0m"
echo "  rss_status   - Show service status and current values"
echo "  rss_latest   - Display latest news article"
echo "  rss_channels - List all subscribed RSS feeds"
echo "  rss_add      - Add new RSS feed"
echo "  rss_remove   - Remove RSS feed"
echo "  rss_help     - Show this help message"
echo ""
echo -e "\033[1;36mMQTT Topics:\033[0m"
echo ""
echo "News Topics (all retained):"
echo "  news/headline  - Article headline"
echo "  news/content   - Article content (plain text, no HTML)"
echo "  news/source    - Feed name (e.g. TechCrunch, BBC World)"
echo "  news/link      - Article URL"
echo "  news/publish   - Publication date"
echo ""
echo "Time Topics:"
echo "  today/time     - Current time in HH:MM format (retained)"
echo "  today/seconds  - Current seconds in SS format (not retained)"
echo ""
echo "Date Topics (all retained, Slovak):"
echo "  today/dow      - Day of week (pondelok, utorok, streda, stvrtok, piatok, sobota, nedela)"
echo "  today/sdate    - Short date (D.M.YYYY format, e.g. 20.1.2026)"
echo "  today/ldate    - Long date (D. month format, e.g. 20. januara)"
echo "  today/year     - Year (YYYY format)"
echo "  today/nameday  - Slovak nameday for current date"
echo ""
echo -e "\033[1;36mUsage Examples:\033[0m"
echo "  rss_add \"https://example.com/feed.xml\" \"Tech\" \"Example Site\""
echo "  rss_remove techcrunch"
echo "  mosquitto_sub -h localhost -t 'news/#' -v"
echo "  mosquitto_sub -h localhost -t 'today/#' -v"
echo ""
